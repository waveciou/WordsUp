{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "checkJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "pretty": true,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/Src/*": ["src/*"],
      "@/Data/*": ["src/data/*"],
      "@/Functions/*": ["src/functions/*"],
      "@/Hooks/*": ["src/hooks/*"],
      "@/Interfaces/*": ["src/interfaces/*"],
      "@/Components/*": ["components/*"],
      "@/Pages/*": ["pages/*"],
      "@/Public/*": ["public/*"],
      "@/Store/*": ["store/*"],
      "@/Slice/*": ["store/slice/*"],
      "@/Styles/*": ["styles/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "./node_modules"
  ]
}